.well
    form.form-horizontal(name="profileForm")
        fieldset
            legend= !!texts ? texts.Profile : "Profile"
            .form-group
                label.col-md-2.control-label(for="email")= !!texts ? texts.Email : "Email"
                .col-md-10
                    input.form-control(name="email", type="email", placeholder= !!texts ? texts.Email : "Email", ng-model="email", required)
            .form-group
                label.col-md-2.control-label(for="firstName")= !!texts ? texts.FirstName : "FirstName"
                .col-md-10
                    input.form-control(name="firstName", type="text", placeholder= !!texts ? texts.FirstName : "FirstName", ng-model="firstName", required)
            .form-group
                label.col-md-2.control-label(for="lastName")= !!texts ? texts.LastName : "LastName"
                .col-md-10
                    input.form-control(name="lastName", type="text", placeholder= !!texts ? texts.LastName : "LastName", ng-model="lastName", required)
            .form-group
                label.col-md-2.control-label(for="password")= !!texts ? texts.Password : "Password"
                .col-md-10
                    input.form-control(name="password", type="password", placeholder= !!texts ? texts.Password : "Password", ng-model="password")
            .form-group
                .col-md-10.col-md-offset-2
                    .pull-right
                        button.btn.btn-primary(ng-click="update()", ng-disabled="profileForm.$invalid")= !!texts ? texts.Send : "Send"
                        | &nbsp;
                        a.btn.btn-default(href="/")= !!texts ? texts.Cancel : "Cancel"